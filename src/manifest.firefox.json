{
  "manifest_version": 2,
  "name": "Bandcamp Player Extension",
  "version": "2.4.0",
  "description": "Enhanced Bandcamp player with BPM detection",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "*://bandcamp.com/*",
    "*://*.bandcamp.com/*",
    "*://*.bcbits.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://bandcamp.com/*", "*://*.bandcamp.com/*"],
      "js": ["content-scripts/bandcamp-player.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'wasm-unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "essentia-wasm.wasm"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "bandcamp-player-extension@local.dev"
    }
  }
}
