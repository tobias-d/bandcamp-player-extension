{
  "manifest_version": 3,
  "name": "Bandcamp Player Extension",
  "version": "2.2",
  "description": "Enhanced Bandcamp player with BPM detection",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://bandcamp.com/*",
    "*://*.bandcamp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://bandcamp.com/*",
        "*://*.bandcamp.com/*"
      ],
      "js": [
        "content-scripts/bandcamp-player.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "public/icon48-v2.png",
    "96": "public/icon96-v2.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "essentia-wasm.wasm"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
