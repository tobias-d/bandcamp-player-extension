{
  "name": "bandcamp-player-extension",
  "version": "2.4",
  "description": "Bandcamp Player Extension with Essentia.js BPM detection",
  "scripts": {
    "build": "npm run build:firefox",
    "prebuild:firefox": "node scripts/patch-essentia-no-eval.js",
    "build:firefox": "webpack --env target=firefox --mode production",
    "prebuild:chrome": "node scripts/patch-essentia-no-eval.js",
    "build:chrome": "webpack --env target=chrome --mode production",
    "prebuild:dev": "node scripts/patch-essentia-no-eval.js",
    "build:dev": "webpack --env target=firefox --mode development",
    "prewatch": "node scripts/patch-essentia-no-eval.js",
    "watch": "webpack --env target=firefox --watch",
    "package:firefox": "bash scripts/package-firefox.sh",
    "clean": "rm -rf dist node_modules package-lock.json"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@types/chrome": "^0.1.36",
    "@types/node": "^25.2.3",
    "@types/webpack-env": "^1.18.8",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.3",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "essentia.js": "0.1.3",
    "process": "^0.11.10"
  }
}
